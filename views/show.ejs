<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pinterest</title>
    <link rel="stylesheet" href="/stylesheets/show.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/remixicon@4.1.0/fonts/remixicon.css"
      rel="stylesheet"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />
</head>
<body>
    <% if(nav === true){ %>
        <div class="navbar">
            <div class="heading">
                <span class="logo">
                    <i class="ri-pinterest-fill"></i></span>
        <h3 class="navh3">Pinterest</h3>
    </div>
        <div class="links">
          <a class="links1" href="/profile">Profile</a>
          <a class="links1" href="/feed">Feed</a>
          <a class="links1" href="/logout">Logout</a>
        </div>
      </div>
      <% } %>
      <div class="postcontainer">
        <div class="postcards">
            <% user.posts.forEach(function(elem){ %>
            <div class="postcards1">
            <div class="card1">
                <img src="/images/uploads/<%= elem.image %>">
            </div>
            <h5 class="posttitle"><%= elem.title  %></h5></div>
            <% }) %>
            
        </div>
    </div>
    
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
      crossorigin="anonymous"
    ></script>
</body>
</html>