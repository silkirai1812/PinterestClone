<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Pinterest</title>
    <link rel="stylesheet" href="/stylesheets/profile.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/remixicon@4.1.0/fonts/remixicon.css"
      rel="stylesheet"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
      crossorigin="anonymous"
    />
  </head>
  <body>

    <% if(nav === true){ %>
      <div class="navbar">
          <div class="heading">
              <span class="logo">
                  <i class="ri-pinterest-fill"></i></span>
      <h3 class="navh3">Pinterest</h3>
  </div>
      <div class="links">
        <a class="links1" href="/profile">Profile</a>
        <a class="links1" href="/feed">Feed</a>
        <a class="links1" href="/logout">Logout</a>
      </div>
    </div>
    <% } %>
    
    <div class="bgblack">
    <div class="containerpers">
      <form id="uploadform" hidden action="/fileupload" method="post" enctype="multipart/form-data">
        <input type="file" name="image">
      </form>
      <div class="cardpers">
        <div class="editprofile">
          <span id="uploadicon" class="editspan">
            <i class="pencil ri-pencil-fill"></i>
          </span>
          <div class="profile-picture">
            <img
              src="/images/uploads/<%= user.dp %>"
            
            />
          </div>
        </div>
        <h2 class="name"><%= user.fullName %></h2>
        <h3 class="username">@<%= user.username %></h3>
        <p class="tagline"><%= %> </p>
        <a href="/edit" class="button">Edit Profile</a><br>
        <a href="/add" class="button">Add new Post</a>
      </div>
    </div>
  </div>
  <div class="uploadedpin">
    <div class="containerpins">
      <div class="cardspins">
        <div class="card2" style="width: 18rem">
          <img
            src="/images/uploads/<%= user?.posts[0]?.image %>"
            alt="..."
          />
          <div class="card-body1">
            <a href="/show/posts">Your Uploaded Pins</a>
            <h5 class="card-title1"><%= user.posts.length %> Pins</h5>
          </div>
        </div>
      </div>
    </div>
  </div>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
      crossorigin="anonymous"
    ></script>
    <script>
document.querySelector("#uploadicon").addEventListener("click", function(){
  document.querySelector("#uploadform input").click();
})

document.querySelector("#uploadform input").addEventListener("change", function(){
  document.querySelector("#uploadform").submit();
})
  </script>

  </body>
</html>
